<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee web-app_2_4.xsd"
    version="2.4">

	<display-name>Aduna Sesame Web Client</display-name>
	<description>Aduna Sesame Web Client</description>

	<filter>
		<filter-name>WelcomeRedirectFilter</filter-name>
		<filter-class>org.openrdf.sesame.webclient.filters.WelcomeRedirectFilter</filter-class>
		<init-param>
			<param-name>welcome-view</param-name>
			<param-value>overview.view</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>WelcomeRedirectFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
	    <servlet-name>webclient</servlet-name>
    	<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	    <load-on-startup>100</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>webclient</servlet-name>
		<url-pattern>*.view</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>
			overview.view
		</welcome-file>
	</welcome-file-list>
  
	<taglib>
		<taglib-uri>/spring</taglib-uri>
		<taglib-location>/WEB-INF/spring.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/sesame</taglib-uri>
		<taglib-location>/WEB-INF/sesame.tld</taglib-location>
	</taglib>
  
</web-app>
