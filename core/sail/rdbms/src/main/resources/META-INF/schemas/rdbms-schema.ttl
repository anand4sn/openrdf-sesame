#
# Sesame configuration schema for rdbms RDF stores
#
@prefix xsd: <http://www.w3.org/ 2001/XMLSchema#>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix ns: <http://www.openrdf.org/config/sail/rdbms#>.

ns:jdbcDriver a rdf:Property ;
	rdfs:label "JDBC driver"@en ;
	rdfs:comment "Java Class name."@en ;
	rdfs:range xsd:string .

ns:host a rdf:Property ;
	rdfs:label "Host"@en ;
	rdfs:comment "Host name or IP address"@en ;
	rdfs:range xsd:string .

ns:port a rdf:Property ;
	rdfs:label "Port"@en ;
	rdfs:comment "TCP port of the remote database server"@en ;
	rdfs:range xsd:nonNegativeInteger .

ns:database a rdf:Property ;
	rdfs:label "Database Name"@en ;
	rdfs:comment "Database identification name."@en ;
	rdfs:range xsd:string .

ns:urlProperties a rdf:Property ;
	rdfs:label "Connection Properties"@en ;
	rdfs:comment "Additional JDBC connection properties."@en ;
	rdfs:range xsd:string .

ns:user a rdf:Property ;
	rdfs:label "User name"@en ;
	rdfs:comment "Authentication username."@en ;
	rdfs:range xsd:string .

ns:password a rdf:Property ;
	rdfs:label "Password"@en ;
	rdfs:comment "Authentication password"@en ;
	rdfs:range xsd:string .

ns:maxTripleTables a rdf:Property ;
	rdfs:label "Max number of triple tables"@en ;
	rdfs:comment "A limit on the number of tables this store should create."@en ;
	rdfs:range xsd:string .
