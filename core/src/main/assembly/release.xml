<assembly>
  <id>release</id>
  
  <formats>
    <format>dir</format>
  </formats>

  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <excludes>
        <exclude>org.openrdf:sesame</exclude>
        <exclude>junit:junit</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
  
  <fileSets>
    <fileSet>
      <directory>/</directory>
      <outputDirectory/>
      <includes>
        <include>*.txt</include>
      </includes>
    </fileSet>
    
    <fileSet>
      <directory>openrdf-http/openrdf-http-server/target</directory>
      <outputDirectory>war</outputDirectory>
      <includes>
        <include>*.war</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>openrdf-http/openrdf-http-webclient/target</directory>
      <outputDirectory>war</outputDirectory>
      <includes>
        <include>*.war</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>target/docs</directory>
      <outputDirectory>docs</outputDirectory>
    </fileSet>

    <fileSet>
      <directory>target/site</directory>
      <outputDirectory>docs</outputDirectory>
    </fileSet>

    <fileSet>
      <directory>src/main/dist/bin</directory>
      <outputDirectory>bin</outputDirectory>
    </fileSet>
  </fileSets>
     
</assembly>
