<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>org.openrdf</groupId>
	<artifactId>openrdf-sesame</artifactId>
	<packaging>jar</packaging>
	<version>2.0-alpha4</version>
	<name>OpenRDF Sesame</name>
	<description>An extensible framework for RDF and RDF Schema data.</description>
	<url>http://www.openrdf.org/</url>

	<organization>
		<name>Aduna</name>
		<url>http://www.aduna-software.com/</url>
	</organization>

	<inceptionYear>2001</inceptionYear>

	<licenses>
		<license>
			<name>Open Software License version 3.0</name>
			<url>http://www.opensource.org/licenses/osl-3.0.php</url>
			<distribution>repo</distribution>
		</license>
		<license>
			<name>GNU Lesser General Public License (LGPL)</name>
			<url>http://www.gnu.org/copyleft/lesser.html</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<dependencies>
		<dependency>
			<groupId>org.openrdf</groupId>
			<artifactId>openrdf-console</artifactId>
			<version>2.0-alpha4</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-release-plugin</artifactId>
				<configuration>
					<tagBase>
						https://src.aduna-software.org/svn/org.openrdf/releases/sesame2/openrdf-console
					</tagBase>
				</configuration>
			</plugin>
			
            <plugin>
                 <artifactId>maven-assembly-plugin</artifactId>
                 <configuration>
                 	<descriptors>
                 	   <descriptor>src/main/assembly/onejar.xml</descriptor>
                 	   <descriptor>src/main/assembly/release.xml</descriptor>
                 	   <descriptor>src/main/assembly/sdk.xml</descriptor>
                 	</descriptors>
                 </configuration>
            </plugin>

