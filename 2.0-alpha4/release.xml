	</build>

	<reporting>
		<outputDirectory>${project.build.directory}/docs</outputDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<aggregate>true</aggregate>
				</configuration>
			</plugin>
		</plugins>
	</reporting>

	<repositories>
		<repository>
			<id>aduna-repo</id>
			<name>Aduna Repository</name>
			<url>http://repository.aduna-software.org/maven2</url>
		</repository>
	</repositories>

	<scm>
		<connection>
			scm:svn:https://src.aduna-software.org/svn/org.openrdf/sesame2/openrdf-sesame
		</connection>
		<developerConnection>
			scm:svn:https://src.aduna-software.org/svn/org.openrdf/sesame2/openrdf-sesame
		</developerConnection>
		<url>
			https://src.aduna-software.org/svn/org.openrdf/sesame2/openrdf-sesame
