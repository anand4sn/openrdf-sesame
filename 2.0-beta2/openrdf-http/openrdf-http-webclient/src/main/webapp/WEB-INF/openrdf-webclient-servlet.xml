<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- RESOURCES -->
	<bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basename" value="messages" />
	</bean>

	<bean id="navigation" class="info.aduna.webapp.navigation.NavigationModel">
		<property name="keepParent" value="true" />
		<property name="navigationModels">
			<list>
				<value>/navigation.xml</value>
			</list>
		</property>
	</bean>

	<!-- INTERCEPTORS -->
	<bean id="common" class="info.aduna.webapp.util.spring.CommonValuesHandlerInterceptor" />

	<bean id="navigationInterceptor" class="info.aduna.webapp.navigation.spring.NavigationHandlerInterceptor">
		<property name="navigationModel" ref="navigation" />
	</bean>

	<bean id="navigationRulesInterceptor" class="org.openrdf.http.webclient.NavigationRulesHandlerInterceptor" />

	<bean id="server" class="org.openrdf.http.webclient.server.ServerSelectionInterceptor" />

	<bean id="repository" class="org.openrdf.http.webclient.repository.RepositorySelectionInterceptor" />

	<!-- MAPPINGS -->
	<bean id="serverSelectionMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="/server/select.form">serverSelectionController</prop>
			</props>
		</property>
		<property name="order" value="1" />
		<property name="interceptors">
			<list>
				<ref bean="common" />
				<ref bean="navigationInterceptor" />
				<ref bean="navigationRulesInterceptor" />
			</list>
		</property>
	</bean>

	<bean id="serverUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="order" value="2" />
		<property name="mappings">
			<props>
				<prop key="/server/overview.view">serverController</prop>
			</props>
		</property>
		<property name="interceptors">
			<list>
				<ref bean="common" />
				<ref bean="navigationInterceptor" />
				<ref bean="server" />
				<ref bean="navigationRulesInterceptor" />
			</list>
		</property>
	</bean>

	<bean id="repositoryUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="order" value="3" />
		<property name="mappings">
			<props>
				<prop key="/repository/overview.view">repositoryController</prop>
				<prop key="/repository/modify/add/file.form">addFileController</prop>
				<prop key="/repository/modify/add/url.form">addURLController</prop>
				<prop key="/repository/modify/add/text.form">addTextController</prop>
				<prop key="/repository/modify/remove/statements.form">removeStatementsController</prop>
				<prop key="/repository/modify/remove/clear.form">clearController</prop>
				<prop key="/repository/query/select.form">selectQueryFormController</prop>
				<prop key="/repository/query/construct.form">constructQueryFormController</prop>
				<prop key="/repository/explore/overview.view">exploreRepositoryController</prop>
				<prop key="/repository/explore/resource.view">exploreResourceController</prop>
				<prop key="/repository/extract/overview.form">extractionController</prop>
				<prop key="**/*.view">filenameViewController</prop>
				<prop key="**/*.form">filenameViewController</prop>
			</props>
		</property>
		<property name="interceptors">
			<list>
				<ref bean="common" />
				<ref bean="navigationInterceptor" />
				<ref bean="server" />
				<ref bean="repository" />
				<ref bean="navigationRulesInterceptor" />
			</list>
		</property>
	</bean>

	<!-- CONTROLLERS -->
	<bean id="serverSelectionController" class="org.openrdf.http.webclient.server.ServerSelectionController">
		<property name="commandName" value="server" />
		<property name="commandClass" value="org.openrdf.http.webclient.server.ServerSelection" />
		<property name="formView" value="server/select" />
		<property name="successView" value="redirect:overview.view" />
		<property name="bindOnNewForm" value="true" />
	</bean>

	<bean id="serverController" class="org.openrdf.http.webclient.server.ServerController" />

	<bean id="repositoryController" class="org.openrdf.http.webclient.repository.RepositoryController" />

    <bean id="addFileController" class="org.openrdf.http.webclient.repository.modify.add.AddController">
        <property name="commandClass" value="org.openrdf.http.webclient.repository.modify.add.RDFFileUpload"/>
        <property name="formView" value="repository/modify/add/file"/>
        <property name="successView" value="redirect:/repository/modify/overview.view"/>
    </bean>
    <bean id="addURLController" class="org.openrdf.http.webclient.repository.modify.add.AddController">
        <property name="commandClass" value="org.openrdf.http.webclient.repository.modify.add.RDFURLUpload"/>
        <property name="formView" value="repository/modify/add/url"/>
        <property name="successView" value="redirect:/repository/modify/overview.view"/>
    </bean>
    <bean id="addTextController" class="org.openrdf.http.webclient.repository.modify.add.AddController">
        <property name="commandClass" value="org.openrdf.http.webclient.repository.modify.add.RDFTextUpload"/>
        <property name="formView" value="repository/modify/add/text"/>
        <property name="successView" value="redirect:/repository/modify/overview.view"/>
    </bean>

    <bean id="removeStatementsController" class="org.openrdf.http.webclient.repository.modify.remove.RemoveStatementsController">
        <property name="commandClass" value="org.openrdf.http.webclient.repository.modify.remove.RemovalSpecification"/>
        <property name="formView" value="repository/modify/remove/statements"/>
        <property name="successView" value="redirect:/repository/modify/overview.view"/>
    </bean>
    <bean id="clearController" class="org.openrdf.http.webclient.repository.modify.remove.ClearController">
        <property name="commandClass" value="org.openrdf.http.webclient.repository.modify.remove.RemovalSpecification"/>
        <property name="formView" value="repository/modify/remove/clear"/>
        <property name="successView" value="redirect:/repository/modify/overview.view"/>
    </bean>


	<bean id="selectQueryFormController" class="org.openrdf.http.webclient.repository.query.SelectQueryFormController">
		<property name="cacheSeconds" value="300" />
		<property name="commandName" value="query" />
		<property name="commandClass" value="org.openrdf.http.webclient.repository.query.SelectQueryInfo" />
		<property name="formView" value="repository/query/select" />
		<property name="successView" value="repository/query/tableresult" />
	</bean>

	<bean id="constructQueryFormController" class="org.openrdf.http.webclient.repository.query.ConstructQueryFormController">
		<property name="cacheSeconds" value="300" />
		<property name="commandName" value="query" />
		<property name="commandClass" value="org.openrdf.http.webclient.repository.query.ConstructQueryInfo" />
		<property name="formView" value="repository/query/construct" />
		<property name="successView" value="repository/query/graphresult" />
	</bean>

	<bean id="exploreRepositoryController" class="org.openrdf.http.webclient.repository.explore.ExploreRepositoryController">
		<property name="view" value="repository/explore/overview" />
	</bean>
	
	<bean id="exploreResourceController" class="org.openrdf.http.webclient.repository.explore.ExploreResourceController">
		<property name="commandName" value="exploration" />
		<property name="commandClass" value="org.openrdf.http.webclient.repository.explore.ExplorationResource" />
		<property name="view" value="repository/explore/resource" />
	</bean>

	<bean id="extractionController" class="org.openrdf.http.webclient.repository.extract.ExtractionController">
		<property name="commandClass" value="org.openrdf.http.webclient.repository.extract.ExtractionSettings" />
		<property name="formView" value="repository/extract/overview" />
	</bean>

	<bean id="filenameViewController" class="org.springframework.web.servlet.mvc.UrlFilenameViewController" />

	<!-- RESOLVERS -->
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize" value="256000" />
	</bean>

	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass" value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/WEB-INF/views/" />
		<property name="suffix" value=".jsp" />
	</bean>

</beans>
